<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".features.myroutes.presentation.FollowRouteFragment"
        android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#AA13AA00"
        android:layout_height="60dp">

        <TextView
            style="@style/BR_ToolbarTv"
            android:text="Follow a route"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_route_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_route_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_route_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_route_ride_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_route_info"
        app:layout_constraintBottom_toBottomOf="parent">
    </org.osmdroid.views.MapView>
    <Button
        android:id="@+id/bt_show_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_my_location_grey"
        app:layout_constraintEnd_toEndOf="@id/ll_route_info"
        app:layout_constraintTop_toTopOf="@id/map_view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

